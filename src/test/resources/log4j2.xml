<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">

  <Appenders>
    <Console name="stdout" target="SYSTEM_OUT">
      <PatternLayout
          pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %-5p %c{1}:%L - %m %X{device.id} %X{session.id}%n"/>
    </Console>
  </Appenders>

  <Loggers>
    <Root level="debug">
      <AppenderRef ref="stdout"/>
    </Root>
  </Loggers>
</Configuration>